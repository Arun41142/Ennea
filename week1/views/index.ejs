<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles.css">
    <title>Movie Search App</title>
</head>

<body>
    <section id="home">
        <div class="container-fluid d-flex justify-content-between shadow nav-container">
            <h1 class="logo">Movie <span class="orange">Search</span></h1>
            <form action="/submit" class="search-bar d-flex">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="movie">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
        <!-- movie-cards  -->
        <div class="container"></div>
        <div class="inner row d-flex justify-content-center align-items-center px-5">
            <% result.forEach(movie=> { %>
                    <div class="col-lg-3">
                        <div class="card my-4">
                            <img src="<%= imageUrl + movie.poster_path %>" class="card-img-top" alt="<%= movie.title %>"
                                onerror="this.onerror=null; this.src='/user-icon.jpg';">
                            <div class="card-body">
                                <h5 class="card-title"><%= movie.title %></h5>
                                <p class="movie-overview"><%= movie.overview %></p>
                                <button class="btn btn-primary Details">View Details</button>
                            </div>
                        </div>
                    </div>
                <% }); %>
        </div>
        </div>
    </section>

        <script src="/toggle.js"></script>
        <script src="../index.js"></script>
</body>

</html>