<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        * {
            margin: 0px;
            padding: 0px;
            box-sizing: border-box;
        }

        .orange {
            color: rgba(204, 133, 1, 0.87);
        }

        .logo {
            font-weight: 800;
        }

        .nav-container {
            padding: 2.5% 6%;
        }

        img {
            height: 350px;
            width: 300px;
        }

        .img-container {
            margin-top: 5%;
        }

        .movie-cards {
            background-color: beige;
        }
    </style>
    <title>Movie Search App</title>
</head>

<body>
    <section id="navbar">
        <div class="container-fluid d-flex justify-content-between shadow nav-container">
            <h1 class="logo">Movie <span class="orange">Search</span></h1>
            <form action="/submit" class="search-bar d-flex">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="movie">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </section>

    <!-- movie cards -->
    <section class="movie-cards">
        <div class="container">
            <div class="inner row d-flex justify-content-center align-items-center px-5">
                <% result.forEach(movie => { %>
                    <div class="col-lg-3 img-container">
                        <img src="<%= imageUrl + movie.poster_path %>" alt="<%= movie.title %>">
                        <p><strong><%= movie.title %></strong></p>
                        <p>overview: <%= movie.overview %></p>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>
    <script src="../index.js"></script>
</body>

</html>
